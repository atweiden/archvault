# allow incoming WireGuard connections
udp dport $WIREGUARD_PORT counter log prefix "nft#inet#filter#input (accept wireguard): " accept

# allow DNS from WireGuard
iifname $WIREGUARD_INTERFACE tcp dport 53 counter log prefix "nft#inet#filter#input (accept dns from wireguard): " accept
iifname $WIREGUARD_INTERFACE udp dport 53 counter log prefix "nft#inet#filter#input (accept dns from wireguard): " accept

